</head>
<body>
    <!-- <div>
        <iframe src="/chatroom.html" name=" chatbtn" style="border:none; position: fixed;
            right:15px;bottom: 15px;width:1000px;height: 600px;background-color: transparent;"></iframe>
    </div> -->
    <div class="container" id = "containerid">
        <div class="sidebar">
            <div class="logo">
                <img src="/logo.png" alt="Logo">
            </div>
            <ul>
                <li><a class = "createpostbtn" id = "opencreatepage" href="#">New Post+</a></li>
                <li><a href="#">Home</a></li>
                <li><a href="#">Search</a></li>
                <li><a href="#">My Profile</a></li>
                <li><a href="#">Settings</a></li>
                <li><a href="#">Sign out</a></li>
            </ul>
        </div>
        
        <div class="main-content">
            <div class="coverphoto">
                <img src="<%= user.cover_pic %>" alt="cover">
            </div>
            <div class="profile">
                <div class="profile-photo">
                    <img src="<%= user.profile_pic %>" alt="Profile Photo">
                </div>
                <div class="profile-info">
                    <h1><%= user.username %></h1>
                    <h3>Biography:</h3>
                    <p><%= user.bio %></p>
                </div>
                <div class="profile-info">
                    <h2>94 Followers</h2>
                </div>
                <div class="profile-info">
                    <h2>102 Following</h2>
                </div>
            </div>
            <div class="posts">
                <% for (let i = 0; i < posts.length; i++) { %>
                <div class="post">
                    <div class="post-header">
                        <h2>Posted on <%= posts[i].post_time %></h2>
                        <div class="dropdown">
                            <button class="dropbtn">...</button>
                            <div class="dropdown-content">
                                <a class="popupeditbtn" href="#">Edit</a>
                                <a href="#">Delete</a>
                            </div>
                        </div>
                    </div>
                    <p><%= posts[i].post_des %></p>
                </div>
                <div class="popupeditpost">
                    <button class="close-button" id = "closeedit">&times;</button>
                    <h2>Edit post posted on <%= posts[i].post_time %>...</h2>
                    <form>
                        <label for="content">Content:</label>
                        <textarea id="content" name="content" rows="5" placeholder="Thoughts on your mind..." required></textarea>
        
                        <label for="hide_post">Hide post?</label>
                        <input type="checkbox" id="hide_post" name="hide_post" value="yes">
        
                        <button type="submit">DONE</button>
                    </form>
                </div>
                <% } %>
            </div>
        </div>
    
        <div class="popupcreatepost" >
                <button class="close-button" id = "closecreatepage">&times;</button>
                <h1>Create New Post</h1>
                <form action="/profile/<%= user.user_id %>" method="POST">
                    <label for="content">Content:</label>
                    <textarea id="content" name="content" rows="5" placeholder="Thoughts on your mind..." required></textarea>
        
                    <label for="media">Image/Video (optional):</label>
                    <input type="file" id="media" name="media" accept="image/, video/">
        
                    <label for="hide_post">Hide post?</label>
                    <input type="checkbox" id="hide_post" name="hide_post" value="false">
        
                    <button type="submit" value="Submit">POST</button>
                </form>
        </div>
        <!-- <div class="popupeditpost">
            <button class="close-button" id = "closeedit">&times;</button>
            <h2>Edit post posted on <%= posts[0].post_time %>...</h2>
            <form>
                <label for="content">Content:</label>
                <textarea id="content" name="content" rows="5" placeholder="Thoughts on your mind..." required></textarea>

                <label for="hide_post">Hide post?</label>
                <input type="checkbox" id="hide_post" name="hide_post" value="yes">

                <button type="submit">DONE</button>
            </form>
        </div> -->
    </div>
    <script src="/profile.js"></script>
</body>
</html>
