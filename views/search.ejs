<!DOCTYPE html>
<html>
<head>
    <!-- Set character encoding and page title -->
	<meta charset="UTF-8">
    <title>Search</title>
    <!-- Import stylesheet -->
    <link rel="stylesheet" href="/styles_search.css">
</head>
<body>
    <!-- Create a sidebar with a logo and links -->
    <div class="sidebar">
        <div class="logo">
            <img src="/logo.png" alt="Logo">
        </div>
        <ul>
            <li><a href="/homepage/<%= id %>">Home</a></li>
            <li><a href="#">Search</a></li>
            <li><a href="/profile/<%= id%>">My Profile</a></li>
            <li><a href="/settingpage/<%= id %>">Settings</a></li>
            <li><a href="/login">Sign out</a></li>
        </ul>
    </div>
    <!-- Create main content area -->
    <div class="main-content">
        <!-- Create search form -->
        <div class="search-container">
            <h1>Looking For Others?</h1>
            <form>
                <input type="text" id="username" name="username" placeholder="Enter the username" required>
                <button type="submit">
                    <i class="fa fa-search"></i>   
                </button>
            </form>
        </div>
        <!-- Display search results using a loop-->
        <div class="search-result">
            <ul>
                <% for (let i = 0; i < newresult.length; i++) { %>
                <li>
                    <!-- Create link to user's profile page -->
                    <a href="/other_profile/<%= newresult[i].user_id %>/<%= id %>">
                        <!-- Display user's profile photo and username -->
                        <div class="result-photo">
                            <img src="/profile.png" alt="Profile Photo">
                        </div>
                        <div class="result-name">
                            <h2><%= newresult[i].username %></h2>
                        </div>
                    </a>
                </li>
                <% } %>
            </ul>
        </div>
    </div>
</body>
</html>